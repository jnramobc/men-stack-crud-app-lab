<!-- views/foods/show.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= food.name %></title> <!-- Dynamic title based on food name -->
  </head>
  <body>
    <nav>
        <a href="/foods/">Back to Foods</a>
    </nav>
    <h1><%= food.name %></h1>
    <!-- Conditional rendering based on foods temperature -->
    <% if (food.isHotCold) { %>
      <p>This food is hot!</p>
    <% } else { %>
      <p>This food is cold!</p>
    <% } %>
    <form action="/foods/<%=food._id%>?_method=DELETE" method="POST">
        <button type="submit">Delete <%= food.name %></button>
      </form>
      <a href="/foods/<%= food._id %>/edit">Edit <%= food.name %></a>
      <a href="/foods">Back to Foods</a>
  </body>
</html>
